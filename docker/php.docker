FROM php:7.3-fpm

RUN apt-get update
RUN apt-get install -y unzip libpq-dev libicu-dev libzip-dev wget && docker-php-ext-install pgsql pdo_pgsql opcache zip ctype
RUN docker-php-ext-configure intl
RUN docker-php-ext-install intl
RUN wget https://getcomposer.org/installer -O - -q | php -- --install-dir=/bin --filename=composer --quiet

WORKDIR /var/www